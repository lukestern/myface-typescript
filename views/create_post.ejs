<html lang="en-gb">
<%- include('_head') -%>
    <%- include('_header') -%>

        <body>
            <h1>Create Post</h1>
            <form class="create-item-form" method="post" action="/posts/create">
                <label class="form-item">
                    <div>Message</div>
                    <input class="form-input" type="text" name="message" required />
                </label>
                <label class="form-item">
                    <div>Image</div>
                    <input class="form-input" type="url" name="imageUrl" required />
                </label>
                <button class="submit-button" type="submit">Submit</button>
            </form>
        </body>
        <%- include('_footer') -%>
</html>